<h2>Create City</h2>

<form asp-action="CreateCity">
    <div class="form-group">
        <label asp-for="CityName"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DistrictId"></label>
        @Html.DropDownList("DistrictId", ViewBag.ProvinceList as SelectList, "Select a District", new { @class = "form-control" })
        <span asp-validation-for="DistrictId" class="text-danger"></span>

    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create City</button>
</form>
