@model Tkf_Complaint_System.Models.City
﻿@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-7 mb-4 order-0">

<h2>Create City</h2>

<form asp-action="CreateCity">
    <div class="form-group">
        <label asp-for="CityName"></label>
        <input asp-for="CityName" class="form-control" />
        <span asp-validation-for="CityName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DistrictId"></label>
        @Html.DropDownList("DistrictId", ViewBag.ProvinceList as SelectList, "Select a District", new { @class = "form-control" })
        <span asp-validation-for="DistrictId" class="text-danger"></span>

    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create City</button>
</form>
</div>
        <div class="col-lg-5 mb-4 order-0">
        </div>
</div>       
</div>