@model List<ClientInformationDTO>
<!-- jQuery -->


<head>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
@*        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tables /</span> Basic Tables</h4>
*@
        <!--<hr class="my-5" />-->
        <!--Hoverable Table rows-->
        <div class="card">
            <h5 class="card-header">Client Information</h5>
            <div class="table-responsive text-nowrap">
                <table id="example2" class="table table-bordered table-hover">
                   
                    <thead>
                        <tr>
                            <!--<th>Project</th>-->
                            <th>Client Type</th>
                            <th>Gender</th>
                            <th>Name</th>
                            <th>Age Group</th>
                            <th>Nationality</th>
                            <th>CNIC</th>
                           <th>Status.</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ClientType</td>
                                <td>@item.Gender</td>
                                <td>@item.Name</td>
                                <td>@item.AgeGroup</td>
                                <td>@item.Nationality</td>
                                <td>@item.CNIC</td>
                         
                                <td><span class="badge bg-label-warning me-1">@item.Feedbacks.FirstOrDefault()?.StatusName</span></td>

                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" href="@Url.Action("Detail","ClientInformationView", new{ClientId = @item.Id })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                            <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            
                            </tr>
                        }
                      
                    
                    </tbody>
                </table>
            </div>
        </div>
        <!--Hoverable Table rows  -->

        <hr class="my-5" />

        <!-- / Content -->
   

        <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->
</div>



<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true, // Enable searching
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "buttons": true,
            "columnDefs": [
                { "type": "html", "targets": "_all" } // Set the data type to "html" for all columns
            ]
        });
    });
</script>

